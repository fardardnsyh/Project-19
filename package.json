{
  "name": "onyx",
  "version": "0.1.0",
  "description": "Onyx is a Job Application Tracker made for job seekers to help them manage their job applications .",
  "private": true,
  "scripts": {
    "dev": "next dev ",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "lint:fix": "next lint --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\" --ignore-unknown",
    "prettier:check": "prettier --check \"**/*.{css,js,json,jsx,ts,tsx}\" --ignore-unknown",
    "db:push": "dotenv -e .env.local prisma db push",
    "db:format": "dotenv -e .env.local prisma format",
    "db:generate": "dotenv -e .env.local prisma generate",
    "db:studio": "dotenv -e .env.local prisma studio",
    "db:reset": "dotenv -e .env.local prisma db push -- --force-reset",
    "commit": "cz"
  },
  "dependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@hookform/resolvers": "3.3.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toolbar": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-email/components": "^0.0.12",
    "@react-email/render": "^0.0.10",
    "@tanstack/react-table": "^8.16.0",
    "@tiptap/extension-heading": "^2.2.4",
    "@tiptap/extension-paragraph": "^2.2.4",
    "@tiptap/extension-placeholder": "^2.2.4",
    "@tiptap/extension-text": "^2.2.4",
    "@tiptap/html": "^2.2.4",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/react": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@uploadthing/react": "^6.5.4",
    "autoprefixer": "10.4.15",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^0.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^2.30.0",
    "emblor": "^1.3.4",
    "eslint": "8.48.0",
    "eslint-config-next": "^14.2.3",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.276.0",
    "next": "^14.2.3",
    "next-auth": "^4.24.5",
    "nodemailer": "^6.9.6",
    "postcss": "8.4.29",
    "prisma": "^5.7.1",
    "react": "^18.3.1",
    "react-day-picker": "^8.9.1",
    "react-dom": "^18.3.1",
    "react-email": "^1.10.0",
    "react-hook-form": "^7.46.1",
    "react-resizable-panels": "^1.0.8",
    "react-wrap-balancer": "^1.1.0",
    "sharp": "^0.33.4",
    "tailwindcss": "3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.2.2",
    "uploadthing": "^6.10.4",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.12",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.5",
    "@types/nodemailer": "^6.4.11",
    "@typescript-eslint/parser": "^6.7.3",
    "clsx": "^2.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^8.0.3",
    "inquirer": "^9.2.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwind-merge": "^1.14.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "eslint",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
